@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Review>;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Review review in Model)
    {
      <li>@Html.ActionLink($"{review.Rating}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Select a restaurant to review", "Index", "Restaurants")</p>

<p>@Html.ActionLink("Add a new restaurant", "Create")</p>

<p>@Html.ActionLink("See all cuisines", "Index", "Cuisines")</p>

<p>@Html.ActionLink("See all restaurants", "Index", "Restaurants")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
