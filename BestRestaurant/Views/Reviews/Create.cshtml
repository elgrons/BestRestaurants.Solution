@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Review

<p><strong>NOTE:</strong> You need to have at least one restaurant before you can add a review!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Restaurants") to create a restaurant.</p>

<h4>Add a new restaurant</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Rating)
  @Html.TextBoxFor(model => model.Rating)

  @Html.LabelFor(model => model.Date, "Visit Date")
  @Html.TextBoxFor(model => model.Date, new { @class = "form-control", type = "date" })

  @Html.LabelFor(model => model.Restaurant)
  @Html.DropDownList("RestaurantId")

  <input type="submit" value="Add" class="btn btn-primary"/>
}

<p>@Html.ActionLink("Show all reviews", "Index")</p>

<p>@Html.ActionLink("Show all restaurants", "Index", "Restaurants")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>